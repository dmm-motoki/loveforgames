<div class="container">
  <div class="row">
    <h1><%= @post.user.name %>さんの投稿</h1>
  </div>
  <div class="row">
    <div class="col-md-4">
      <p><%= @post.message %></p>
      <%= link_to "投稿削除", admin_destroy_in_postshow_path(@post.id), method: :delete, data: {confirm: "本当に削除しますか？"} %>
    </div>
    <div class="col-md-8">
      <table class="table">
        <% @comments.each do |comments| %>
          <tr>
            <td><%= comments.user.name %></td>
            <td><%= comments.comments_content %></td>
            <td><%= link_to "削除", admin_comment_path(comments.id), method: :delete, data: {confirm: "本当に削除しますか？"} %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>