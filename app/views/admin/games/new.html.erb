<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-4 text-center mt-5">
      <h1 class="bg-light mb-0">ゲーム追加</h1>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-6 bg-light py-4">
      <%= form_with model: @game, url: admin_games_path do |f| %>
        <div class="field">
          <%= f.label :title, "タイトル", class: "font-weight-bold" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="field mb-3">
          <%= f.label :content, "概要", class: "font-weight-bold" %>
          <%= f.text_area :content, class: "form-control", rows: "5" %>
        </div>
        <div class="actions d-flex justify-content-center">
          <%= f.submit "追加", class: "btn btn-success btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row flex-row-reverse">
    <div class="col-md-3 mt-4">
      <%= link_to "exit", admin_games_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>