<div class="container">
  <div class="row">
    <% if @user.id == current_user.id %>
      <h1>マイページ</h1>
    <% else %>
    <div class="col-md-6">
      <h1><%= @user.name %>のページ</h1>
    </div>
    <div class="col-md-3">
      <% if current_user.following?(@user) %>
        <%= link_to "フォロー外す", public_user_relationships_path(@user.id), method: :delete %>
      <% else %>
        <%= link_to "フォローする", public_user_relationships_path(@user.id), method: :post %>
      <% end %>
    </div>
    <% end %>
  </div>
  <div class="row">
    <h5>フォロー <%= link_to @user.followings.count,  public_user_followings_path(@user.id) %></h5>
    <h5>フォロワー <%= link_to @user.followers.count, public_user_followers_path(@user.id) %></h5>
  </div>

  </div>
</div>