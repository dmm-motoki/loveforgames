<div class="container">
  <div class="row">
    <% if @user.id == current_user.id %>
      <h1>マイページ</h1>
      <%= link_to "編集", edit_public_user_path(current_user.id) %>
    <% else %>
      <div class="col-md-6">
        <h1><%= @user.name %>のページ</h1>
      </div>
      <% if current_user.email != "guest@example.com" %>
        <div class="col-md-3">
          <% if current_user.email == "guest@example.com" %>
          <% elsif current_user.following?(@user) %>
            <%= link_to "フォロー外す", public_user_relationships_path(@user.id), method: :delete %>
          <% else %>
            <%= link_to "フォローする", public_user_relationships_path(@user.id), method: :post %>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="row">
    <h3>お気に入りゲーム</h3>
    <% @favorite_games.each do |favorite_games| %>
      <ul>
        <li><%= link_to favorite_games.title, public_game_path(favorite_games.id) %></li>
      </ul>
    <% end %>
  </div>
  <div class="row">
    <div>
      <h5>フォロー <%= @user.followings.count %></h5>
      <table>
        <% @followings.each do |followings| %>
        <tr>
          <td><%= link_to followings.name, public_user_path(followings.id) %></td>
        </tr>
        <% end %>
      </table>
    </div>
    <div>
      <h5>フォロワー <%= @user.followers.count %></h5>
      <table>
        <% @followers.each do |followers| %>
        <tr>
          <td><%= link_to followers.name, public_user_path(followers.id) %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>

  </div>
</div>